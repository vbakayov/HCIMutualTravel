<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wrapp.example.floatlabelededittext.MainActivity">


    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="00dp"
        float:fletPadding="1dp"
        android:id="@+id/view2"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/marker2"
        android:layout_toEndOf="@+id/marker2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To"
            android:layout_alignRight="@+id/marker2"
            android:id="@+id/textView3"
            android:layout_below="@+id/view"/>

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/view3" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:id="@+id/marker2"
        android:src="@drawable/marker"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:layout_alignBottom="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view" />


    <!-- add some padding -->
    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        float:fletPadding="1dp"
        android:id="@+id/view"
        android:layout_toRightOf="@+id/marker1"
        android:layout_toEndOf="@+id/marker1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="From" />



        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="54dp"
            android:ems="10" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:id="@+id/marker1"
        android:src="@drawable/marker"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:layout_alignTop="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        float:fletPadding="1dp"
        android:id="@+id/view3"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2">

        <EditText
            android:id="@+id/depart"
            android:layout_width="120dp"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:hint="Depart"
            android:layout_below="@+id/view2"
            android:layout_marginTop="52dp" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/marker3"
        android:src="@drawable/calendar"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:layout_alignBottom="@+id/view3"
        android:layout_alignRight="@+id/marker2"
        android:layout_alignEnd="@+id/marker2" />



    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        float:fletPadding="1dp"
        android:id="@+id/view4"
        android:layout_below="@+id/view2"
        android:layout_alignRight="@+id/view2"
        android:layout_alignEnd="@+id/view2">

        <EditText
            android:id="@+id/seats"
            android:layout_width="120dp"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:hint="Weight"
            android:layout_below="@+id/view2"
            android:layout_marginTop="52dp" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/marker4"
        android:src="@drawable/weight"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:layout_alignBottom="@+id/view4"
        android:layout_toLeftOf="@+id/view4"
        android:layout_toStartOf="@+id/view4" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_marginTop="60dp"
        android:layout_alignLeft="@+id/marker3"
        android:layout_alignStart="@+id/marker3"
        android:id="@+id/relativeLayout2">

        <CheckBox android:id="@+id/smoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector_bag"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector_box"
            android:paddingLeft="30dp"
            android:layout_alignBottom="@+id/smoking"
            android:layout_toLeftOf="@+id/pets"
            android:layout_toStartOf="@+id/pets" />

        <CheckBox android:id="@+id/pets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector_golf"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/music"
            android:layout_toStartOf="@+id/music" />
        <CheckBox android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector_ski"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>



    <Button
        android:id="@+id/buttonSearch"
        android:text="Search"
        android:textColor="#FFFFFFFF"
        android:textSize="15dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select type:"
        android:id="@+id/textView4"
        android:layout_below="@+id/view3"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>